<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleBank.Dashboard"
            >
    <ContentPage.Background>

        <LinearGradientBrush EndPoint="1,0">
            <GradientStop Color="LightSteelBlue"
                          Offset="0.1" />
            <GradientStop Color="SteelBlue"
                          Offset="1.0" />
        </LinearGradientBrush>


    </ContentPage.Background>
    <!--<ScrollView  BackgroundColor="LightSteelBlue">-->
        <ScrollView >
        <VerticalStackLayout 
            Padding="30,0"
            Spacing="25">
            <Label 
                Text="Welcome to SimpleBank!"
                FontAttributes="Bold"
                TextColor="Black"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Label Text="Username:" />
            <Entry x:Name="txtUsername" Placeholder="Enter username here" TextColor="Black"/>
            
            <Label Text="Password:" />
            <Entry x:Name="txtPassword" IsPassword="True" />

            
            <Button x:Name="btnLogin" Text="Log In" />
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>